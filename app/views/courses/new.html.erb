<%= form_with(model: @course, method: :post) do |f| %> 
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title, class: "form-control", placeholder: "Text input", style: "width: 400px" %>
	</p>

	<p>
		<%= f.label :volume %><br />
		<%# <%= f.text_area :title, class: "form-control", rows: "6", style: "width: 400px" %> 
		<%= f.text_field :volume, class: "form-control", style: "width: 400px" %>
	</p>

	<p>
		<%= f.label :price %><br />
		<%# <%= f.text_area :title, class: "form-control", rows: "6", style: "width: 400px" %> 
		<%= f.text_field :price, class: "form-control", style: "width: 400px" %>
	</p>

	<p>
		<%= f.submit"Save Course", class: "btn btn-primary"  %>
	</p>


<% end %>  


