<div class="columns">
  <div class="column is-four-fifth is-flex is-flex-direction-column is-justify-content-center p-0">
    <h1 class="has-text-left mb-0 mt-0 pb-0"> Список курсов </h1>
  </div>
  <div class="column is-one-fifth">
    <div class="buttons is-right">
      <a href="/courses/new" class="button is-success mt-3">
        + Новый курс
      </a>
    </div>
  </div>
</div>
<hr class="mt-3">

<%= render(CourseComponent.with_collection(Course.includes(:units).all)) %> 

<table>
  <thead><th>Название курса</th><th> Название модуля</th><th> Описание модуля</th></thead>
  <tbody>
    <% @courses.each do |course| %>
    <% first_row = true %>
    <% course.units.each do |unit| %>
      <tr>
        <% if first_row == true %>
        <td><a class="is-size-5 columns" href="<%= "/courses/#{course.id}/edit" %>"><%= course.title %></a></td>
          <% first_row = false %>
        <% else %>
          <td></td>
        <% end %>
        <td><a class="is-size-5 columns" href="<%= "/units/#{unit.id}/edit" %>"><%= unit.title %></a></td>
        <td> <%= unit.body %> </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

















<style>
    .column a {
        text-decoration: none;
    }
</style>