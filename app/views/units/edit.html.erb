<h1>Edit unit <%= "#{@unit.id}" %></h1>
<br>


<%= form_for :unit, url: course_unit_path(@unit), method: :put do |f| %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_area :title, rows: 3, style: "width: 400px" %>
	</p>

	<p>
       <%= f.label :body %><br />
		<%= f.text_area :body, rows: 3, style: "width: 400px" %>
    </p>

	

	<p>
		<%= f.submit %>
	</p>

<%# <% end %>
<% end %>

<br>
<div>
  <%= button_to 'Back', course_units_path, method: :get %>
</div>
